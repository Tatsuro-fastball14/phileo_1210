<%= javascript_pack_tag 'hello_vue' %>
<div class="side-bar"></div>
<div class='phileo-info'></div>
<div class="wrapper">
  <div class="side-bar">
    <%= search_form_for @p, url: cooks_search_path do |f| %>
      <%= f.label :store, 'Keyword' %>
      <%= f.search_field :store_cont %>
      <br>
      <%= f.submit '検 索' %>
    <% end %>
  </div>
  <div class="cooks">
    <div id="test3"></div>
    <h1 >お店一覧</h1>

    <% @cooks.each do |cook| %>
      <div class='item'>
        <div class='item-img'>
          <%= image_tag cook.images[0], id: "shopimage", class: "star-icon" %>
        </div>
         <% end %>
        <div class='item-price'>
          <div class="avatar">
            <%= link_to image_tag("えび.jpg"),   cook_path(cook.id), method: :get %>
          </div>
          <h3 class='item-name'><%= cook.store_catchcopy %></h3>
        </div>
      </div>
    <% end %>
    <%= paginate @cooks %>
  </div>
</div>